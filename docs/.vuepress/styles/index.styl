html, body, .theme-container.no-sidebar .navbar
  background: transparent !important

.theme-container.no-sidebar .navbar .links
  background: transparent !important

.theme-container.no-sidebar .footer
  display none

.home .theme-default-content
  padding: 0 !important
  max-width: 100%

.custom-hero
  display: flex
  flex-direction: column
  justify-content: center
  align-items: center
  text-align: center
  height: calc(100vh - 57.6px) // 占满屏幕高度
  padding: 0 2rem

.hero-title
  font-family: 'LXGW WenKai Screen', sans-serif
  font-size: 5rem
  font-weight: 700
  line-height: 1.1
  margin-bottom: 2.5rem
  letter-spacing: -0.1rem
  text-shadow: 0 0 15px rgba(48, 197, 197, 0.6) // 发光效果

.hero-tagline
  font-family: 'LXGW WenKai Screen', sans-serif
  font-size: 1.25rem
  max-width: 600px
  line-height: 1.6
  opacity: 0.8

.hero-button
  display: inline-block // 允许设置 padding, margin 等
  font-size: 1.1rem
  font-weight: 600 // 字体加粗
  color: #2c3e50 // 按钮文字颜色，与标题一致
  background-color: transparent // 透明背景（描边按钮的关键）
  border: 2px solid #2c3e50 // 2px 宽的深色边框
  padding: 0.75rem 1.75rem // 内边距 (上下 | 左右)
  border-radius: 8px // 圆角
  text-decoration: none // 去掉链接默认的下划线
  margin-top: 2.5rem // 与上方内容的间距
  transition: all 0.3s ease // 为所有属性添加 0.3 秒的平滑过渡效果

  // 鼠标悬停时的交互效果
  &:hover
    background-color: #2c3e50 // 背景色反转为深色
    color: white // 文字颜色反转为白色
    transform: translateY(-3px) // 整个按钮向上移动 3px，增加动感
    box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1) // 添加一点微妙的阴影，增加立体感

@media (max-width: 719px)
  .hero-title
    font-size: 2.5rem